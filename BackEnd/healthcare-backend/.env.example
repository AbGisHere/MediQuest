# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/healthcare_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Biometric Security (IMPORTANT: Change in production!)
BIOMETRIC_SECRET_KEY=your-biometric-secret-key-min-32-chars-change-this

# Security
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_API=60/minute

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Emergency Access
EMERGENCY_ACCESS_DURATION_HOURS=2

# Data Retention (days)
AUDIT_LOG_RETENTION_DAYS=2555
VITAL_DATA_RETENTION_DAYS=3650
ALERT_RETENTION_DAYS=365

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-this-32-bytes-min


# Role-Based Encryption Keys (for clinical notes)
DOCTOR_ENCRYPTION_KEY=your-doctor-encryption-key-min-32-chars-change-in-production
PATIENT_ENCRYPTION_KEY=your-patient-encryption-key-min-32-chars-change-in-production
ADMIN_ENCRYPTION_KEY=your-admin-encryption-key-min-32-chars-change-in-production

# PDF Upload Configuration
UPLOAD_DIR=./uploads/blood_reports
MAX_UPLOAD_SIZE_MB=10
